<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneCatalogActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessLeaf"
        android:weightSum="5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#DED7D7"
            android:padding="15dp">

            <EditText
                android:id="@+id/phoneName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone name"
                tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.7"
            android:layout_marginTop="30dp"
            android:background="#DED7D7"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry">

            <EditText
                android:id="@+id/struct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone features"
                tools:ignore="Autofill,HardcodedText,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center|end"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/save"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_four_bac"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/black"
                />
            
        </LinearLayout>


    </LinearLayout>

</LinearLayout>